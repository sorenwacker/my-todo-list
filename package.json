{
  "name": "todo",
  "version": "0.2.0",
  "description": "Markdown-based todo list with notes and deadlines",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.{js,vue}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,vue}\" \"tests/**/*.js\"",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.39.2",
    "@vitejs/plugin-vue": "^5.1.4",
    "electron": "^36.9.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "vite": "^6.4.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "d3-force": "^3.0.0",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.6.2",
    "lucide-vue-next": "^0.556.0",
    "marked": "^14.1.3",
    "mermaid": "^11.12.2",
    "vue": "^3.5.12",
    "vuedraggable": "^4.1.0"
  },
  "build": {
    "appId": "com.todo.app",
    "productName": "Todo",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "sdrwacker",
      "repo": "my-todo-list"
    },
    "files": [
      "out/**/*",
      "node_modules/better-sqlite3/**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "mac": {
      "icon": "resources/icon-512.png",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "identity": null
    },
    "win": {
      "icon": "resources/icon-256.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "resources",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
