{
  "name": "todo-list",
  "version": "0.2.0",
  "description": "Markdown-based todo list with notes and deadlines",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder --win --mac"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "electron": "^36.9.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "d3-force": "^3.0.0",
    "lucide-vue-next": "^0.556.0",
    "marked": "^14.1.3",
    "mermaid": "^11.12.2",
    "vue": "^3.5.12",
    "vuedraggable": "^4.1.0"
  },
  "build": {
    "appId": "com.todolist.app",
    "productName": "Todo List",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/better-sqlite3/**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "mac": {
      "icon": "resources/icon-512.png",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "resources/icon-256.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "resources",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
